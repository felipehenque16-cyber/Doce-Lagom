                <i class="fab fa-whatsapp"></i> Finalizar pelo WhatsApp
            </button>
            <button class="btn-clear" onclick="abrirModal()">Limpar carrinho</button>
        </div>
    </div>
</div>

<script>
    const ESTOQUE_MAX = 10;
    let estoqueInterno = JSON.parse(localStorage.getItem('estoque_lagom')) || {};
    let qtys = {};
    let cart = [];
    let total = 0;
    let comboSelecao = {
        trio: { total: 0, limite: 3, itens: {} },
        'duo-b': { total: 0, limite: 1, itens: {} },
        'duo-t': { total: 0, limite: 1, itens: {} }
    };

    function changeQty(id, delta) {
        if (!qtys[id]) qtys[id] = 0;
        let baseK = id.split('-')[0];
        let estoqueUsado = estoqueInterno[baseK] || 0;
        if (delta > 0 && (estoqueUsado + qtys[id]) >= ESTOQUE_MAX) return mostrarMsg("Limite de producao atingido!");
        let n = qtys[id] + delta;
        if (n >= 0) {
            qtys[id] = n;
            document.getElementById(`qty-${id}`).innerText = n;
            const plusBtn = document.getElementById(`plus-${id}`);
            if (plusBtn) plusBtn.disabled = (estoqueUsado + n >= ESTOQUE_MAX);
        }
    }

    function addTrufa(sab, key) {
        let qM = qtys[key+'-m'] || 0;
        let qMi = qtys[key+'-mini'] || 0;
        if (qM + qMi === 0) return mostrarMsg("Selecione a quantidade!");
        estoqueInterno[key] = (estoqueInterno[key] || 0) + (qM + qMi);
        if (qM > 0) addItemCart(`${qM}x Trufa Media (${sab})`, qM * 6);
        if (qMi > 0) addItemCart(`${qMi}x Trufa Mini (${sab})`, qMi * 4);
        qtys[key+'-m'] = 0; qtys[key+'-mini'] = 0;
        document.getElementById(`qty-${key}-m`).innerText = "0";
        document.getElementById(`qty-${key}-mini`).innerText = "0";
        salvar();
    }

    function addItem(nome, preco, key) {
        let q = qtys[key] || 0;
        if (q === 0) return mostrarMsg("Selecione a quantidade!");
        estoqueInterno[key] = (estoqueInterno[key] || 0) + q;
        addItemCart(`${q}x ${nome}`, q * preco);
        qtys[key] = 0;
        document.getElementById(`qty-${key}`).innerText = "0";
        salvar();
    }

    function changeComboQty(g, i, d) {
        if (!comboSelecao[g].itens[i]) comboSelecao[g].itens[i] = 0;
        let nV = comboSelecao[g].itens[i] + d;
        let nT = comboSelecao[g].total + d;
        if (nV >= 0 && nT <= comboSelecao[g].limite) {
            comboSelecao[g].itens[i] = nV;
            comboSelecao[g].total = nT;
            document.getElementById(`${g}-${i}`).innerText = nV;
            document.querySelectorAll(`[id^="plus-${g}-"]`).forEach(b => b.disabled = (comboSelecao[g].total >= comboSelecao[g].limite));
        }
    }

    function finalizarTrio() {
        if (comboSelecao.trio.total < 3) return mostrarMsg("Escolha 3 sabores!");
        let s = Object.entries(comboSelecao.trio.itens).filter(v => v[1] > 0).map(v => `${v[1]}x ${v[0]}`).join(", ");
        addItemCart(`Combo Trio: ${s}`, 15);
        resetCombo('trio');
        salvar();
    }

    function finalizarDuo() {
        if (comboSelecao['duo-b'].total < 1 || comboSelecao['duo-t'].total < 1) return mostrarMsg("Escolha bolo e trufa!");
        let b = Object.keys(comboSelecao['duo-b'].itens).find(k => comboSelecao['duo-b'].itens[k] > 0);
        let t = Object.keys(comboSelecao['duo-t'].itens).find(k => comboSelecao['duo-t'].itens[k] > 0);
        addItemCart(`Duo: Bolo ${b} + Trufa ${t}`, 20);
        resetCombo('duo-b');
        resetCombo('duo-t');
        salvar();
    }

    function resetCombo(g) {
        comboSelecao[g].total = 0;
        comboSelecao[g].itens = {};
        document.querySelectorAll(`span[id^="${g}-"]`).forEach(s => s.innerText = "0");
        document.querySelectorAll(`[id^="plus-${g}-"]`).forEach(b => b.disabled = false);
    }

    function addItemCart(n, p) {
        cart.push({nome: n, preco: p});
        total += p;
        render();
        mostrarMsg("Adicionado ao carrinho!");
    }

    function mostrarMsg(t) {
        const n = document.getElementById('notification');
        n.innerText = t;
        n.style.display = 'block';
        setTimeout(() => n.style.display = 'none', 2500);
    }

    function render() {
        const p = document.getElementById('cartPanel');
        p.style.display = cart.length > 0 ? 'block' : 'none';
        document.getElementById('cartList').innerHTML = cart.map(i => `<div class="cart-item"><span>${i.nome}</span><strong>R$ ${i.preco.toFixed(2)}</strong></div>`).join('');
        document.getElementById('totalVal').innerText = `R$ ${total.toFixed(2)}`;
        document.getElementById('cartCount').innerText = cart.length;
    }

    function expandirCart() {
        if(cart.length > 0) document.getElementById('cartPanel').classList.add('expandido');
    }

    function fecharCart(e) {
        e.stopPropagation();
        document.getElementById('cartPanel').classList.remove('expandido');
    }

    function abrirModal() {
        document.getElementById('confirmModal').style.display = 'flex';
    }

    function fecharModal() {
        document.getElementById('confirmModal').style.display = 'none';
    }

    function confirmarLimpeza() {
        localStorage.clear();
        location.reload();
    }

    function salvar() {
        localStorage.setItem('estoque_lagom', JSON.stringify(estoqueInterno));
    }

    function enviar(e) {
        e.stopPropagation();
        const nome = document.getElementById('clientName').value;
        const pg = document.getElementById('paymentMethod').value;
        const apto = document.getElementById('Apartamento').value;
        const bloco = document.getElementById('Bloco').value;
        if(!nome || !pg) return mostrarMsg("Preencha nome e pagamento!");
        let m = `*Reserva Doce Lagom*\n*Cliente:* ${nome}\n*Pagamento:* ${pg}`;
        if(apto) m += `\n*Apartamento:* ${apto}`;
        if(bloco) m += `\n*Bloco:* ${bloco}`;
        m += `\n\n` + cart.map(i => ` ${i.nome}`).join("\n") + `\n\n*Total: R$ ${total.toFixed(2)}*`;
        window.open(`https://wa.me/558393889854?text=${encodeURIComponent(m)}`, '_blank');
    }
</script>
</body>
