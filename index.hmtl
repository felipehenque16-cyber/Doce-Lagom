        function saveAllData() {
            localStorage.setItem('doce_lagom_products', JSON.stringify(adminData.products));
            localStorage.setItem('doce_lagom_orders', JSON.stringify(adminData.orders));
        }

        function updateAllSections() {
            updateDashboard();
            updateProductsSection();
            updateAnalytics();
            updateOrdersSection();
            updateCounts();
        }

        function updateCounts() {
            document.getElementById('productsCount').textContent = adminData.products.length;
            document.getElementById('ordersCount').textContent = adminData.orders.filter(o => o.status === 'pending').length;
            
            // Atualizar contador de estoque baixo
            const lowStockCount = adminData.products.filter(p => p.stock < 5).length;
            document.getElementById('lowStockCount').textContent = lowStockCount;
            
            // Atualizar contador de produtos em destaque
            const featuredCount = adminData.products.filter(p => p.featured).length;
            document.getElementById('featuredProducts').textContent = featuredCount;
        }

        function updateDashboard() {
            // Estatísticas gerais
            document.getElementById('totalProducts').textContent = adminData.products.length;
            
            const featuredCount = adminData.products.filter(p => p.featured).length;
            document.getElementById('featuredProducts').textContent = featuredCount;
            
            // Contar categorias únicas
            const categories = [...new Set(adminData.products.map(p => p.category))];
            document.getElementById('totalCategories').textContent = categories.length;
            
            // Estoque total
            const totalStock = adminData.products.reduce((sum, p) => sum + p.stock, 0);
            document.getElementById('totalStock').textContent = totalStock;
            
            // Top produtos
            updateTopProducts();
        }

        function updateTopProducts() {
            const topProducts = [...adminData.products]
                .sort((a, b) => (b.sales || 0) - (a.sales || 0))
                .slice(0, 4);
            
            const container = document.getElementById('topProductsList');
            container.innerHTML = topProducts.map(product => `
                <div style="background: white; border-radius: var(--radius); padding: 15px; border: 1px solid var(--border);">
                    <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 10px;">
                        <img src="${product.image}" alt="${product.name}" 
                             style="width: 50px; height: 50px; border-radius: var(--radius); object-fit: cover;"
                             onerror="this.src='https://via.placeholder.com/50?text=Produto'">
                        <div style="flex: 1;">
                            <div style="font-weight: 600; font-size: 0.9rem; color: var(--text-primary);">${product.name}</div>
                            <div style="font-size: 0.8rem; color: var(--text-secondary);">${product.category}</div>
                        </div>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <div style="font-size: 0.8rem; color: var(--text-secondary);">Vendas</div>
                            <div style="font-weight: 700; color: var(--primary-gold);">${product.sales || 0}</div>
                        </div>
                        <div style="text-align: right;">
                            <div style="font-size: 0.8rem; color: var(--text-secondary);">Preço</div>
                            <div style="font-weight: 700; color: var(--success);">R$ ${product.price.toFixed(2)}</div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function updateProductsSection() {
            const grid = document.getElementById('productsGrid');
            
            if (adminData.products.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-box"></i>
                        <p>Nenhum produto cadastrado</p>
                        <button class="btn btn-primary" onclick="showSection('add-product')" style="margin-top: 20px;">
                            <i class="fas fa-plus"></i> Adicionar Primeiro Produto
                        </button>
                    </div>
                `;
                return;
            }

            grid.innerHTML = adminData.products.map(product => {
                // Determinar status do estoque
                let stockClass, stockText;
                if (product.stock === 0) {
                    stockClass = 'stock-low';
                    stockText = 'Sem Estoque';
                } else if (product.stock < 5) {
                    stockClass = 'stock-low';
                    stockText = 'Estoque Crítico';
                } else if (product.stock < 10) {
                    stockClass = 'stock-medium';
                    stockText = 'Estoque Baixo';
                } else {
                    stockClass = 'stock-high';
                    stockText = 'Em Estoque';
                }
                
                // Gerar tags HTML
                const tagsHtml = product.tags && product.tags.length > 0 
                    ? `<div class="product-tags">
                        ${product.tags.map(tag => `<span class="product-tag">${tag}</span>`).join('')}
                       </div>`
                    : '';
                
                return `
                    <div class="product-card">
                        <div style="position: relative;">
                            <img src="${product.image}" alt="${product.name}" class="product-image"
                                 onerror="this.src='https://via.placeholder.com/400x250/FAF9F7/C9A962?text=${encodeURIComponent(product.name)}'">
                            ${product.featured ? '<div class="featured-star" style="position: absolute; top: 10px; right: 10px;"><i class="fas fa-star"></i></div>' : ''}
                        </div>
                        
                        <div class="product-info">
                            <div class="product-header">
                                <div>
                                    <div class="product-title">${product.name}</div>
                                    <span class="product-category">${product.category}</span>
                                </div>
                            </div>
                            
                            ${tagsHtml}
                            
                            <p class="product-desc">${product.description}</p>
                            
                            <div class="product-price">R$ ${product.price.toFixed(2)}</div>
                            
                            <div class="product-stats">
                                <div>
                                    <span class="stock-status ${stockClass}">
                                        <i class="fas fa-box"></i> ${product.stock} unidades
                                    </span>
                                </div>
                                <span style="color: var(--text-secondary);">
                                    <i class="fas fa-shopping-cart"></i> ${product.sales || 0} vendas
                                </span>
                            </div>
                            
                            <div style="display: flex; gap: 10px; margin-top: 15px;">
                                <button class="btn btn-sm btn-edit" onclick="editProduct(${product.id})" style="flex: 1;">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                                <button class="btn btn-sm btn-delete" onclick="deleteProduct(${product.id})">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function updateAnalytics() {
            // Produto mais vendido
            if (adminData.products.length > 0) {
                const bestProduct = adminData.products.reduce((best, current) => 
                    (current.sales || 0) > (best.sales || 0) ? current : best
                );
                document.getElementById('bestProduct').textContent = bestProduct.name;
            }

            // Valor total em estoque
            const stockValue = adminData.products.reduce((sum, p) => sum + (p.price * p.stock), 0);
            document.getElementById('stockValue').textContent = `R$ ${stockValue.toFixed(2)}`;

            // Média de preço
            const avgPrice = adminData.products.reduce((sum, p) => sum + p.price, 0) / adminData.products.length;
            document.getElementById('avgPrice').textContent = `R$ ${avgPrice.toFixed(2)}`;

            // Categoria mais popular
            const categoryCount = {};
            adminData.products.forEach(p => {
                categoryCount[p.category] = (categoryCount[p.category] || 0) + 1;
            });
            const popularCategory = Object.entries(categoryCount).reduce((a, b) => a[1] > b[1] ? a : b)[0];
            document.getElementById('popularCategory').textContent = popularCategory.charAt(0).toUpperCase() + popularCategory.slice(1);

            // Gráficos
            updateCharts();
            updateStockByCategory();
        }

        function updateCharts() {
            // Gráfico de categorias
            const categoryData = {};
            adminData.products.forEach(p => {
                categoryData[p.category] = (categoryData[p.category] || 0) + 1;
            });

            const ctx1 = document.getElementById('categoryChart')?.getContext('2d');
            if (ctx1) {
                if (window.categoryChart) window.categoryChart.destroy();
                
                window.categoryChart = new Chart(ctx1, {
                    type: 'doughnut',
                    data: {
                        labels: Object.keys(categoryData).map(c => c.charAt(0).toUpperCase() + c.slice(1)),
                        datasets: [{
                            data: Object.values(categoryData),
                            backgroundColor: ['#c9a962', '#d4a5a5', '#9bb7d4', '#8fd9a8', '#f4b393'],
                            borderWidth: 2,
                            borderColor: '#ffffff'
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            title: {
                                display: true,
                                text: 'Produtos por Categoria'
                            }
                        }
                    }
                });
            }

            // Gráfico de vendas
            const topProductsForChart = [...adminData.products]
                .sort((a, b) => (b.sales || 0) - (a.sales || 0))
                .slice(0, 5);

            const ctx2 = document.getElementById('salesChart')?.getContext('2d');
            if (ctx2) {
                if (window.salesChart) window.salesChart.destroy();
                
                window.salesChart = new Chart(ctx2, {
                    type: 'bar',
                    data: {
                        labels: topProductsForChart.map(p => p.name.substring(0, 15) + (p.name.length > 15 ? '...' : '')),
                        datasets: [{
                            label: 'Vendas',
                            data: topProductsForChart.map(p => p.sales || 0),
                            backgroundColor: '#c9a962',
                            borderColor: '#b89958',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                display: false
                            },
                            title: {
                                display: true,
                                text: 'Top 5 Produtos Mais Vendidos'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 10
                                }
                            }
                        }
                    }
                });
            }
        }

        function updateStockByCategory() {
            const categoryStock = {};
            adminData.products.forEach(p => {
                categoryStock[p.category] = (categoryStock[p.category] || 0) + p.stock;
            });

            const container = document.getElementById('stockByCategory');
            container.innerHTML = Object.entries(categoryStock).map(([category, stock]) => {
                const categoryName = category.charAt(0).toUpperCase() + category.slice(1);
                const productsInCategory = adminData.products.filter(p => p.category === category).length;
                
                return `
                    <div style="background: white; border-radius: var(--radius); padding: 20px; border-left: 4px solid var(--primary-gold);">
                        <div style="font-weight: 600; color: var(--text-primary); margin-bottom: 5px;">
                            ${categoryName}
                        </div>
                        <div style="font-size: 2rem; font-weight: 700; color: var(--primary-gold); margin: 10px 0;">
                            ${stock}
                        </div>
                        <div style="font-size: 0.85rem; color: var(--text-secondary);">
                            <i class="fas fa-box"></i> ${productsInCategory} produtos
                        </div>
                    </div>
                `;
            }).join('');
        }

        function updateOrdersSection() {
            const tbody = document.getElementById('ordersBody');
            
            if (adminData.orders.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="empty-state">
                            <i class="fas fa-shopping-bag"></i>
                            <p>Nenhum pedido registrado ainda</p>
                            <button class="btn btn-primary" onclick="addSampleOrder()" style="margin-top: 20px;">
                                <i class="fas fa-plus"></i> Adicionar Pedido de Teste
                            </button>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = adminData.orders.map(order => {
                const statusClass = `status-${order.status || 'pending'}`;
                const statusText = getStatusText(order.status);
                
                return `
                    <tr>
                        <td><strong>${order.id || 'N/A'}</strong></td>
                        <td>${order.customerName || 'Cliente'}</td>
                        <td>${order.items ? order.items.join(', ') : 'N/A'}</td>
                        <td>${order.date ? new Date(order.date).toLocaleDateString('pt-BR') : 'N/A'}</td>
                        <td><strong>R$ ${order.total?.toFixed(2) || '0,00'}</strong></td>
                        <td><span class="status-badge ${statusClass}">${statusText}</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-view" onclick="viewOrder('${order.id}')">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-delete" onclick="deleteOrder('${order.id}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
        }

        function getStatusText(status) {
            const statusMap = {
                'pending': 'Pendente',
                'processing': 'Processando',
                'delivered': 'Entregue',
                'cancelled': 'Cancelado'
            };
            return statusMap[status] || 'Pendente';
        }

        // CRUD para Produtos
        function saveProduct() {
            const product = {
                id: Date.now(),
                name: document.getElementById('productName').value,
                category: document.getElementById('productCategory').value,
                price: parseFloat(document.getElementById('productPrice').value),
                stock: parseInt(document.getElementById('productStock').value) || 0,
                image: document.getElementById('productImageURL').value,
                description: document.getElementById('productDescription').value,
                featured: document.getElementById('productFeatured').checked,
                sales: 0,
                createdAt: new Date().toISOString()
            };

            // Processar tags
            const tagsInput = document.getElementById('productTags').value;
            if (tagsInput) {
                product.tags = tagsInput.split(',').map(tag => tag.trim()).filter(tag => tag);
            }

            // Validação
            if (!product.name || !product.category || !product.price || !product.image || !product.description) {
                showNotification('Preencha todos os campos obrigatórios!', 'error');
                return;
            }

            if (product.price <= 0) {
                showNotification('O preço deve ser maior que zero!', 'error');
                return;
            }

            adminData.products.push(product);
            saveAllData();
            updateAllSections();
            showNotification('Produto adicionado com sucesso!', 'success');
            
            // Limpar formulário
            document.getElementById('productName').value = '';
            document.getElementById('productCategory').value = '';
            document.getElementById('productPrice').value = '';
            document.getElementById('productStock').value = '10';
            document.getElementById('productImageURL').value = '';
            document.getElementById('productDescription').value = '';
            document.getElementById('productTags').value = '';
            
            showSection('products');
        }

        function editProduct(productId) {
            const product = adminData.products.find(p => p.id === productId);
            if (!product) return;

            // Preencher formulário
            document.getElementById('productName').value = product.name;
            document.getElementById('productCategory').value = product.category;
            document.getElementById('productPrice').value = product.price;
            document.getElementById('productStock').value = product.stock;
            document.getElementById('productImageURL').value = product.image;
            document.getElementById('productDescription').value = product.description;
            document.getElementById('productFeatured').checked = product.featured;
            document.getElementById('productTags').value = product.tags ? product.tags.join(', ') : '';

            // Alterar título e botão
            document.querySelector('#add-product h3').innerHTML = '<i class="fas fa-edit"></i> Editar Produto';
            const saveBtn = document.querySelector('#add-product .btn-primary');
            saveBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Atualizar Produto';
            saveBtn.onclick = function() { updateProduct(productId); };

            showSection('add-product');
        }

        function updateProduct(productId) {
            const index = adminData.products.findIndex(p => p.id === productId);
            if (index === -1) return;

            const tagsInput = document.getElementById('productTags').value;
            
            adminData.products[index] = {
                ...adminData.products[index],
                name: document.getElementById('productName').value,
                category: document.getElementById('productCategory').value,
                price: parseFloat(document.getElementById('productPrice').value),
                stock: parseInt(document.getElementById('productStock').value) || 0,
                image: document.getElementById('productImageURL').value,
                description: document.getElementById('productDescription').value,
                featured: document.getElementById('productFeatured').checked,
                tags: tagsInput ? tagsInput.split(',').map(tag => tag.trim()).filter(tag => tag) : [],
                updatedAt: new Date().toISOString()
            };

            saveAllData();
            updateAllSections();
            showNotification('Produto atualizado com sucesso!', 'success');
            
            // Resetar formulário
            document.querySelector('#add-product h3').innerHTML = '<i class="fas fa-plus-circle"></i> Adicionar Novo Produto';
            const saveBtn = document.querySelector('#add-product .btn-primary');
            saveBtn.innerHTML = '<i class="fas fa-save"></i> Salvar Produto';
            saveBtn.onclick = function() { saveProduct(); };
            
            showSection('products');
        }

        function deleteProduct(productId) {
            if (confirm('Tem certeza que deseja excluir este produto? Esta ação não pode ser desfeita.')) {
                adminData.products = adminData.products.filter(p => p.id !== productId);
                saveAllData();
                updateAllSections();
                showNotification('Produto excluído com sucesso!', 'success');
            }
        }

        // Funções para Pedidos
        function addSampleOrder() {
            const sampleOrder = {
                id: 'ORD-' + Date.now().toString().slice(-6),
                customerName: 'Cliente Teste',
                items: ['Trufa de Maracujá', 'Bolo de Pote Ninho & Nutella'],
                date: new Date().toISOString(),
                total: 21.00,
                status: 'pending'
            };

            adminData.orders.unshift(sampleOrder);
            saveAllData();
            updateAllSections();
            showNotification('Pedido de teste adicionado!', 'success');
        }

        function viewOrder(orderId) {
            const order = adminData.orders.find(o => o.id === orderId);
            if (!order) {
                alert('Pedido não encontrado');
                return;
            }
            
            alert(`📦 Detalhes do Pedido:\n\nID: ${order.id}\nCliente: ${order.customerName}\nItens: ${order.items?.join(', ') || 'N/A'}\nTotal: R$ ${order.total?.toFixed(2) || '0,00'}\nStatus: ${getStatusText(order.status)}\nData: ${new Date(order.date).toLocaleDateString('pt-BR')}`);
        }

        function deleteOrder(orderId) {
            if (confirm('Excluir este pedido?')) {
                adminData.orders = adminData.orders.filter(o => o.id !== orderId);
                saveAllData();
                updateAllSections();
                showNotification('Pedido excluído!', 'success');
            }
        }

        // Funções de Busca e Filtro
        function searchProducts() {
            const searchTerm = document.getElementById('productSearch').value.toLowerCase();
            if (!searchTerm) {
                updateProductsSection();
                return;
            }

            const filteredProducts = adminData.products.filter(product =>
                product.name.toLowerCase().includes(searchTerm) ||
                product.category.toLowerCase().includes(searchTerm) ||
                product.description.toLowerCase().includes(searchTerm) ||
                (product.tags && product.tags.some(tag => tag.toLowerCase().includes(searchTerm)))
            );

            renderFilteredProducts(filteredProducts);
        }

        function filterProducts() {
            const categoryFilter = document.getElementById('productCategoryFilter').value;
            const stockFilter = document.getElementById('productStockFilter').value;
            const featuredFilter = document.getElementById('productFeaturedFilter').value;
            
            let filteredProducts = adminData.products;
            
            if (categoryFilter !== 'all') {
                filteredProducts = filteredProducts.filter(p => p.category === categoryFilter);
            }
            
            if (stockFilter !== 'all') {
                switch(stockFilter) {
                    case 'high':
                        filteredProducts = filteredProducts.filter(p => p.stock > 10);
                        break;
                    case 'medium':
                        filteredProducts = filteredProducts.filter(p => p.stock >= 5 && p.stock <= 10);
                        break;
                    case 'low':
                        filteredProducts = filteredProducts.filter(p => p.stock < 5);
                        break;
                }
            }
            
            if (featuredFilter !== 'all') {
                filteredProducts = filteredProducts.filter(p => 
                    featuredFilter === 'featured' ? p.featured : !p.featured
                );
            }
            
            renderFilteredProducts(filteredProducts);
        }

        function renderFilteredProducts(products) {
            const grid = document.getElementById('productsGrid');
            
            if (products.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-search"></i>
                        <p>Nenhum produto encontrado</p>
                        <button class="btn" onclick="clearFilters()" style="margin-top: 20px;">
                            <i class="fas fa-times"></i> Limpar Filtros
                        </button>
                    </div>
                `;
                return;
            }

            grid.innerHTML = products.map(product => {
                let stockClass, stockText;
                if (product.stock === 0) {
                    stockClass = 'stock-low';
                    stockText = 'Sem Estoque';
                } else if (product.stock < 5) {
                    stockClass = 'stock-low';
                    stockText = 'Estoque Crítico';
                } else if (product.stock < 10) {
                    stockClass = 'stock-medium';
                    stockText = 'Estoque Baixo';
                } else {
                    stockClass = 'stock-high';
                    stockText = 'Em Estoque';
                }
                
                const tagsHtml = product.tags && product.tags.length > 0 
                    ? `<div class="product-tags">
                        ${product.tags.map(tag => `<span class="product-tag">${tag}</span>`).join('')}
                       </div>`
                    : '';
                
                return `
                    <div class="product-card">
                        <div style="position: relative;">
                            <img src="${product.image}" alt="${product.name}" class="product-image"
                                 onerror="this.src='https://via.placeholder.com/400x250/FAF9F7/C9A962?text=${encodeURIComponent(product.name)}'">
                            ${product.featured ? '<div class="featured-star" style="position: absolute; top: 10px; right: 10px;"><i class="fas fa-star"></i></div>' : ''}
                        </div>
                        
                        <div class="product-info">
                            <div class="product-header">
                                <div>
                                    <div class="product-title">${product.name}</div>
                                    <span class="product-category">${product.category}</span>
                                </div>
                            </div>
                            
                            ${tagsHtml}
                            
                            <p class="product-desc">${product.description}</p>
                            
                            <div class="product-price">R$ ${product.price.toFixed(2)}</div>
                            
                            <div class="product-stats">
                                <div>
                                    <span class="stock-status ${stockClass}">
                                        <i class="fas fa-box"></i> ${product.stock} unidades
                                    </span>
                                </div>
                                <span style="color: var(--text-secondary);">
                                    <i class="fas fa-shopping-cart"></i> ${product.sales || 0} vendas
                                </span>
                            </div>
                            
                            <div style="display: flex; gap: 10px; margin-top: 15px;">
                                <button class="btn btn-sm btn-edit" onclick="editProduct(${product.id})" style="flex: 1;">
                                    <i class="fas fa-edit"></i> Editar
                                </button>
                                <button class="btn btn-sm btn-delete" onclick="deleteProduct(${product.id})">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function clearFilters() {
            document.getElementById('productSearch').value = '';
            document.getElementById('productCategoryFilter').value = 'all';
            document.getElementById('productStockFilter').value = 'all';
            document.getElementById('productFeaturedFilter').value = 'all';
            updateProductsSection();
        }

        // Funções de UI
        function showSection(sectionId) {
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            
            document.getElementById(sectionId).classList.add('active');
            
            const titles = {
                'dashboard': 'Dashboard',
                'orders': 'Pedidos',
                'products': 'Produtos',
                'add-product': 'Adicionar Produto',
                'analytics': 'Análises'
            };
            
            const subtitles = {
                'dashboard': 'Visão geral da loja',
                'orders': 'Gerencie todos os pedidos',
                'products': 'Gerencie seu catálogo',
                'add-product': 'Adicione novos produtos',
                'analytics': 'Estatísticas e métricas'
            };
            
            document.getElementById('sectionTitle').textContent = titles[sectionId] || 'Painel';
            document.getElementById('sectionSubtitle').textContent = subtitles[sectionId] || '';
            
            document.querySelectorAll('.sidebar-menu a').forEach(item => {
                item.classList.remove('active');
            });
            const menuItem = document.querySelector(`.sidebar-menu a[href="#${sectionId}"]`);
            if (menuItem) menuItem.classList.add('active');
            
            if (window.innerWidth <= 1024) {
                document.getElementById('sidebar').classList.remove('active');
            }
        }

        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            const icon = document.getElementById('notificationIcon');
            const messageEl = document.getElementById('notificationMessage');
            
            notification.className = `notification ${type}`;
            icon.className = `fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'exclamation-triangle'}`;
            messageEl.textContent = message;
            
            notification.style.display = 'flex';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        function refreshData() {
            showNotification('Dados atualizados!', 'success');
            updateAllSections();
        }

        function updateCurrentDate() {
            const now = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('currentDate').textContent = now.toLocaleDateString('pt-BR', options);
        }

        function exportProducts() {
            const dataStr = JSON.stringify(adminData.products, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const exportFileDefaultName = 'doce-lagom-produtos.json';
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
            
            showNotification('Produtos exportados com sucesso!', 'success');
        }

        function showLowStockProducts() {
            document.getElementById('productStockFilter').value = 'low';
            showSection('products');
            filterProducts();
        }

        function setupEventListeners() {
            // Toggle sidebar no mobile
            document.getElementById('mobileToggle').addEventListener('click', function() {
                document.getElementById('sidebar').classList.toggle('active');
            });
            
            // Fechar sidebar ao clicar fora (mobile)
            document.addEventListener('click', function(event) {
                const sidebar = document.getElementById('sidebar');
                const toggle = document.getElementById('mobileToggle');
                
                if (window.innerWidth <= 1024 && 
                    sidebar.classList.contains('active') &&
                    !sidebar.contains(event.target) && 
                    event.target !== toggle &&
                    !event.target.closest('.notification')) {
                    sidebar.classList.remove('active');
                }
            });
            
            // Atualizar dados periodicamente
            setInterval(updateCurrentDate, 60000); // Atualizar minuto a minuto
        }

        // Inicializar
        window.onload = initializeAdmin;
    </script>
</body>
</html>
